<html>
  <head>
    <title>Add new video to <%=course.title%></title>
  </head>

  <body>
    <h1>
      Add new video to <%=course.title%>
    </h1>
    <form
      ref="uploadForm"
      id="uploadForm"
      action="/admin/courses/<%=course._id%>"
      method="POST"
      enctype="multipart/form-data"
    >
      <label for="title">video title:</label>
      <input type="text" name="title" placeholder="video title" required />
      <label for="video">File:</label>
      <input name="video" class="form-control-file" type="file" />
      <br />
      <button type="submit">Submit</button>
    </form>
    <br />
    <a href="/admin/courses">Go back</a>
  </body>
</html>
